<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_alignParentStart="true"
            android:paddingEnd="5dp"
            android:text="Nombre:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_name_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:text="Nombre"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_lastname_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_esp"
            android:layout_toEndOf="@+id/txt_name_med"
            android:paddingStart="5dp"
            android:text="Apellido"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_esp"
            android:layout_alignBottom="@+id/txt_esp"
            android:layout_alignParentStart="true"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="Especialidad:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_esp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView8"
            android:paddingTop="5dp"
            android:text="Especialidad"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_med"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_medic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>