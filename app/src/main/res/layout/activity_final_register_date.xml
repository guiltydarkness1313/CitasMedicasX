<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.shibuyaxpress.citasmedicasx.FinalRegisterDateActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aokana"
        android:text="ingrese su descripción"
        android:textSize="18sp" />

    <EditText

        android:id="@+id/input_descripcion_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="descripción de su malestar" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aokana"
        android:text="Escoja una fecha"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_date_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ej. 1997-02-11 "
        android:inputType="datetime" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aokana"
        android:text="Escoja el tiempo"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_time_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ej. 08:30:00"
        android:inputType="time" />

    <Button
        android:id="@+id/btn_register_date"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Registrar cita" />

</LinearLayout>
